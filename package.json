{
  "name": "cli",
  "description": "An React Micro App Build Toolkit",
  "keywords": [
    "react",
    "react-router",
    "webpack",
    "module-federation",
    "micro-frontends",
    "build-tool"
  ],
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "beta": "pnpm changeset pre enter beta",
    "alpha": "pnpm changeset pre enter alpha",
    "rc": "pnpm changeset pre enter rc",
    "exit": "pnpm changeset pre exit",
    "changeset": "npx changeset",
    "version": "pnpm changeset version && node ./scripts/version.js",
    "publish": "pnpm publish -r",
    "clean": "rm -rf node_modules **/*/node_modules",
    "create:icons": "pnpm --filter @wisdesign/icons create",
    "build:icons": "pnpm --filter @wisdesign/icons build"
  },
  "lint-staged": {
    "**/*.{js,jsx}": [
      "prettier --write",
      "eslint"
    ],
    "**/*.json": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "2.27.5",
    "@commitlint/cli": "18.6.1",
    "@commitlint/config-conventional": "18.6.3",
    "@wisdesign/eslint-config": "workspace:*",
    "@wisdesign/prettier-config": "workspace:*",
    "husky": "9.0.11",
    "lint-staged": "15.2.7"
  }
}
