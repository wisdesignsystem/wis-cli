{
  "name": "cli",
  "description": "An React Micro App Build Toolkit",
  "keywords": [
    "react",
    "react-router",
    "webpack",
    "module-federation",
    "micro-frontends",
    "build-tool"
  ],
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "preinstall": "npx only-allow pnpm",
    "beta": "pnpm changeset pre enter beta",
    "alpha": "pnpm changeset pre enter alpha",
    "rc": "pnpm changeset pre enter rc",
    "exit": "pnpm changeset pre exit",
    "changelog": "pnpm changeset",
    "version": "pnpm changeset version && node ./scripts/version.js",
    "publish": "pnpm publish -r",
    "format": "biome check --write",
    "clean": "rm -rf node_modules **/*/node_modules"
  },
  "lint-staged": {
    "**/*.{ts,tsx,json}": "biome check --write"
  },
  "devDependencies": {
    "@changesets/cli": "2.27.5",
    "@commitlint/cli": "18.6.1",
    "@commitlint/config-conventional": "18.6.3",
    "@biomejs/biome": "1.9.4",
    "husky": "9.0.11",
    "lint-staged": "15.2.7"
  }
}
