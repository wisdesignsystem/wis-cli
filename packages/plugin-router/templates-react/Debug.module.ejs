.debug {
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 9999;
  display: inline-block;
}

.trigger {
  display: inline-flex;
  margin: 0;
  padding: 0;
  border: none;
  outline: none;
  background: transparent;
  font-size: 52px;
  box-sizing: border-box;
  cursor: pointer;
}

.trigger[data-open="true"] {
  color: rgba(0, 0, 0, 0.10);
}

.mask {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9999;
  height: 100%;
  width: 100%;
  background: rgba(0,0,0,0.5);
}

.container {
  position: fixed;
  inset: 0;
  overflow: auto;
  outline: 0;
  z-index: 9999;
}

.wrap {
  box-sizing: border-box;
  padding: 0 0 24px;
  position: relative;
  top: 100px;
  width: auto;
  max-width: calc(100vw - 32px);
  margin: 0 auto;
}

.content {
  width: 600px;
  margin: 0 auto;
  font-size: 14px;
  border-radius: 16px;
  border: #ebebeb;
  background: white;
  box-shadow: 0px 10px 15px -3px rgba(16, 24, 40, 0.10), 0px 4px 6px -2px rgba(16, 24, 40, 0.05);
}

.header {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 8px;
  height: 32px;
  padding: 24px;
  border-bottom: 1px solid #ebebeb;
}

.search {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 100%;
  flex: 1 1 auto;
  color: #737373;
}

.search > .icon {
  font-size: 24px;
}

.search > .input {
  flex: 1 1 0;
  height: 100%;
  outline: none;
  border: none;
}

.esc {
  display: flex;
  margin: 0;
  height: 32px;
  padding: 8px;
  font-weight: 400;
  box-sizing: border-box;
  justify-content: center;
  align-items: center;
  border-radius: 8px;
  border: 1px solid #ebebeb;
  background: white;
  color: #404040;
  cursor: pointer;
}
.esc:hover {
  background: #f5f5f5;
}

.footer {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  height: 32px;
  padding: 16px 24px;
  border-top: 1px solid #ebebeb;
}

.helper {
  color: #737373;
  font-size: 14px;
  font-weight: 400;
}

.actions {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 8px;
}

.reset {
  display: flex;
  margin: 0;
  height: 32px;
  padding: 8px;
  font-weight: 400;
  box-sizing: border-box;
  justify-content: center;
  align-items: center;
  border-radius: 8px;
  border: 1px solid #ebebeb;
  background: white;
  color: #404040;
  cursor: pointer;
}

.reset:hover {
  background: #f5f5f5;
}

.confirm {
  display: flex;
  margin: 0;
  height: 32px;
  padding: 8px;
  font-weight: 400;
  box-sizing: border-box;
  justify-content: center;
  align-items: center;
  border-radius: 8px;
  border: 1px solid #ebebeb;
  background: black;
  color: white;
  cursor: pointer;
}

.remotes {
  padding: 0 24px;
}

.remote {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 32px;
  padding: 16px 0;
  gap: 8px;
  border-bottom: 1px solid #ebebeb;
}

.remote:last-child {
  border-bottom: none;
}

.name {
  flex: 0 0 auto;
  width: 200px;
  line-height: 1;
  color: #262626;
  font-size: 14px;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  line-clamp: 2;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.url {
  height: 100%;
  flex: 1 1 auto;
  border-radius: 8px;
  border: 1px solid rgba(0, 0, 0, 0.10);
  padding: 0;
  margin: 0;
  padding: 0 16px;
  outline: none;
}

.undo {
  display: flex;
  margin: 0;
  height: 32px;
  padding: 8px;
  font-weight: 400;
  box-sizing: border-box;
  justify-content: center;
  align-items: center;
  border-radius: 8px;
  border: 1px solid #ebebeb;
  background: white;
  color: #404040;
  cursor: pointer;
}

.undo:hover {
  background: #f5f5f5;
}