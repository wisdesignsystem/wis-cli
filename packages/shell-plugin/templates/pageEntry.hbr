
import React from "react";
import {
{{#if browserRouter }}
  BrowserRouter as Router,
{{else}}
  HashRouter as Router,
{{/if}}
  Routes,
  Route,
} from "wiscore/router";

{{#each pages}}
import {{component.name}} from "{{component.exportPath}}";
{{/each}}

{{#if browserRouter }}
// @ts-ignore
window.$__wis_router__ = "browserRouter"
{{else}}
// @ts-ignore
window.$__wis_router__ = "hashRouter"
{{/if}}

export function Router({ basename }: { basename: string }) {
  return (
    <Router>
      <Routes>
        <Route basename={basename}>
        {{#each pages}}
          {{#if routePath}}
          <Route path="{{routePath}}" element={<{{component.name}} />} />
          {{else}}
          <Route index element={<{{component.name}} />} />
          {{/if}}
        {{/each}}
        <Route>
      <Routes>
    </Router>
  )
}
